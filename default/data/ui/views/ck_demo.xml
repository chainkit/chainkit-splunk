<form theme="light">
  <label>Chainkit Splunk log hardening</label>
  <search id="base_search">
    <query>
      index="ck_verify" | table assetId, hash, query, length, title, verified
    </query>
  </search>
  <fieldset submitButton="false" autoRun="true">
    <input type="dropdown" token="assetId">
      <label>Asset Id</label>
      <search base="base_search">
        <query>| stats count by assetId
      </query>
      </search>
      <choice value="*">All</choice>
      <fieldForLabel>assetId</fieldForLabel>
      <fieldForValue>assetId</fieldForValue>
      <default>*</default>
    </input>
    <input type="dropdown" token="title">
      <label>Title</label>
      <search base="base_search">
        <query>| stats count by title
      </query>
      </search>
      <choice value="*">All</choice>
      <fieldForLabel>title</fieldForLabel>
      <fieldForValue>title</fieldForValue>
      <default>*</default>
    </input>
    <input type="dropdown" token="hash">
      <label>Hash</label>
      <search base="base_search">
        <query>| stats count by hash
      </query>
      </search>
      <choice value="*">All</choice>
      <fieldForLabel>hash</fieldForLabel>
      <fieldForValue>hash</fieldForValue>
      <default>*</default>
    </input>
  </fieldset>
  <row>
    <panel>
      <single>
        <title>CK Total Events</title>
        <search base="base_search">
          <query>| search title=$title$ hash=$hash$ | stats count</query>
        </search>
        <option name="colorMode">block</option>
        <option name="drilldown">none</option>
        <option name="height">117</option>
        <option name="rangeColors">["0x53a051","0x0877a6","0xf8be34","0x555"]</option>
        <option name="rangeValues">[0,30,70]</option>
        <option name="underLabel">Total Events</option>
        <option name="useColors">1</option>
      </single>
    </panel>
  </row>
  <row>
    <panel>
      <html>
        <h2>Powered by</h2>
        <img src="data:image/png;base64," align="middle" width="300" height="300"/>
      </html>
    </panel>
    <panel>
      <chart>
        <title>Events by Input Source</title>
        <search base="base_search">
          <query>| search title=$title$ hash=$hash$ | stats count by title</query>
        </search>
        <option name="charting.chart">column</option>
        <option name="charting.chart.stackMode">default</option>
        <option name="charting.drilldown">none</option>
        <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
      </chart>
    </panel>
    <panel>
      <chart>
        <title>CK Verified Events (by system)</title>
        <search base="base_search">
          <query>| search title=$title$ hash=$hash$ | stats count by verified</query>
        </search>
        <option name="charting.chart">pie</option>
        <option name="charting.drilldown">none</option>
        <option name="charting.legend.labels">[info, error]</option>
        <option name="charting.seriesColors">[0x00FF00,0xFF0000]</option>
      </chart>
    </panel>
  </row>
  <row>
    <panel>
      <table>
        <title>Event Details</title>
        <search base="base_search">
          <query>| search title=$title$ hash=$hash$</query>
        </search>
        <option name="drilldown">none</option>
      </table>
    </panel>
  </row>
</form>